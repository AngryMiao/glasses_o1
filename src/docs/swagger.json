{
    "swagger": "2.0",
    "info": {
        "title": "怒喵 API 文档",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/api",
    "paths": {
        "/api/ai-configs": {
            "get": {
                "description": "获取当前用户的所有AI配置",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "AI配置管理"
                ],
                "summary": "获取用户AI配置列表",
                "responses": {
                    "200": {
                        "description": "成功",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "请求参数错误",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "服务器内部错误",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            },
            "post": {
                "description": "创建新的AI配置",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "AI配置管理"
                ],
                "summary": "创建AI配置",
                "parameters": [
                    {
                        "description": "配置信息",
                        "name": "config",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.CreateAIConfigRequest"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "创建成功",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "请求参数错误",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "服务器内部错误",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/api/ai-configs/{id}": {
            "get": {
                "description": "根据配置ID获取配置详情",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "AI配置管理"
                ],
                "summary": "获取配置详情",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "配置ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "成功",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "请求参数错误",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "404": {
                        "description": "配置不存在",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "服务器内部错误",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            },
            "put": {
                "description": "更新指定的AI配置",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "AI配置管理"
                ],
                "summary": "更新AI配置",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "配置ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "更新信息",
                        "name": "config",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.UpdateAIConfigRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "更新成功",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "请求参数错误",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "404": {
                        "description": "配置不存在",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "服务器内部错误",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            },
            "delete": {
                "description": "删除指定的AI配置",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "AI配置管理"
                ],
                "summary": "删除AI配置",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "配置ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "删除成功",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "请求参数错误",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "404": {
                        "description": "配置不存在",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "服务器内部错误",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/api/ai-configs/{id}/priority": {
            "patch": {
                "description": "设置指定AI配置的优先级",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "AI配置管理"
                ],
                "summary": "设置配置优先级",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "配置ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "优先级信息",
                        "name": "priority",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "integer"
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "操作成功",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "请求参数错误",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "404": {
                        "description": "配置不存在",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "服务器内部错误",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/api/ai-configs/{id}/toggle": {
            "patch": {
                "description": "启用或禁用指定的AI配置",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "AI配置管理"
                ],
                "summary": "切换配置状态",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "配置ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "状态信息",
                        "name": "status",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "boolean"
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "操作成功",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "请求参数错误",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "404": {
                        "description": "配置不存在",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "500": {
                        "description": "服务器内部错误",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/device/": {
            "options": {
                "description": "处理 Device 接口的 OPTIONS 预检请求，返回 200",
                "consumes": [
                    "*/*"
                ],
                "produces": [
                    "text/plain"
                ],
                "tags": [
                    "Device"
                ],
                "summary": "Device 预检请求",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/device/bind": {
            "post": {
                "description": "绑定设备到用户账户，生成设备密钥和token",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Device"
                ],
                "summary": "设备绑定",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Bearer \u003cUserJWT\u003e",
                        "name": "Authorization",
                        "in": "header",
                        "required": true
                    },
                    {
                        "description": "设备绑定请求",
                        "name": "body",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/device.BindDeviceRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "绑定成功",
                        "schema": {
                            "$ref": "#/definitions/device.BindDeviceResponse"
                        }
                    },
                    "400": {
                        "description": "请求参数错误",
                        "schema": {
                            "$ref": "#/definitions/device.BindDeviceResponse"
                        }
                    },
                    "401": {
                        "description": "认证失败",
                        "schema": {
                            "$ref": "#/definitions/device.BindDeviceResponse"
                        }
                    },
                    "500": {
                        "description": "服务器内部错误",
                        "schema": {
                            "$ref": "#/definitions/device.BindDeviceResponse"
                        }
                    }
                }
            }
        },
        "/device/refresh_token": {
            "get": {
                "description": "刷新设备的JWT token，延长有效期",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Device"
                ],
                "summary": "刷新设备token",
                "parameters": [
                    {
                        "type": "string",
                        "description": "设备ID",
                        "name": "device_id",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "当前设备token",
                        "name": "token",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "设备绑定密钥",
                        "name": "bind_key",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "刷新成功",
                        "schema": {
                            "$ref": "#/definitions/device.RefreshTokenResponse"
                        }
                    },
                    "400": {
                        "description": "请求参数错误",
                        "schema": {
                            "$ref": "#/definitions/device.RefreshTokenResponse"
                        }
                    },
                    "401": {
                        "description": "认证失败",
                        "schema": {
                            "$ref": "#/definitions/device.RefreshTokenResponse"
                        }
                    },
                    "500": {
                        "description": "服务器内部错误",
                        "schema": {
                            "$ref": "#/definitions/device.RefreshTokenResponse"
                        }
                    }
                }
            }
        },
        "/device/unbind": {
            "post": {
                "description": "解绑指定设备，将数据库中is_active字段设置为false",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Device"
                ],
                "summary": "设备解绑",
                "parameters": [
                    {
                        "description": "设备解绑请求",
                        "name": "body",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/device.UnbindDeviceRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "解绑成功",
                        "schema": {
                            "$ref": "#/definitions/device.UnbindDeviceResponse"
                        }
                    },
                    "400": {
                        "description": "请求参数错误",
                        "schema": {
                            "$ref": "#/definitions/device.UnbindDeviceResponse"
                        }
                    },
                    "404": {
                        "description": "设备未找到",
                        "schema": {
                            "$ref": "#/definitions/device.UnbindDeviceResponse"
                        }
                    },
                    "500": {
                        "description": "服务器内部错误",
                        "schema": {
                            "$ref": "#/definitions/device.UnbindDeviceResponse"
                        }
                    }
                }
            }
        },
        "/ota/": {
            "get": {
                "description": "获取 OTA 服务状态和 WebSocket 地址，供设备查询",
                "produces": [
                    "text/plain"
                ],
                "tags": [
                    "OTA"
                ],
                "summary": "获取 OTA 状态",
                "responses": {
                    "200": {
                        "description": "OTA interface is running, websocket address: ws://...",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            },
            "post": {
                "description": "设备上传信息后，返回最新固件版本和下载地址",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "OTA"
                ],
                "summary": "上传设备信息获取最新固件",
                "parameters": [
                    {
                        "type": "string",
                        "description": "设备ID",
                        "name": "device-id",
                        "in": "header",
                        "required": true
                    },
                    {
                        "description": "请求体",
                        "name": "body",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/ota.OtaRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/ota.OtaFirmwareResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/ota.ErrorResponse"
                        }
                    }
                }
            },
            "options": {
                "description": "处理 OTA 接口的 OPTIONS 预检请求，返回 200",
                "consumes": [
                    "*/*"
                ],
                "produces": [
                    "text/plain"
                ],
                "tags": [
                    "OTA"
                ],
                "summary": "OTA 预检请求",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/ota_bin/{filename}": {
            "get": {
                "description": "根据文件名下载 OTA 固件",
                "produces": [
                    "application/octet-stream"
                ],
                "tags": [
                    "OTA"
                ],
                "summary": "下载 OTA 固件文件",
                "parameters": [
                    {
                        "type": "string",
                        "description": "固件文件名",
                        "name": "filename",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "文件流"
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/ota.ErrorResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "device.BindDeviceRequest": {
            "type": "object",
            "properties": {
                "device_id": {
                    "type": "string"
                }
            }
        },
        "device.BindDeviceResponse": {
            "type": "object",
            "properties": {
                "device_key": {
                    "description": "设备长期密钥S（明文，仅下发一次）",
                    "type": "string"
                },
                "message": {
                    "description": "错误信息（失败时）",
                    "type": "string"
                },
                "success": {
                    "description": "是否成功",
                    "type": "boolean"
                },
                "token": {
                    "description": "30天有效期DeviceToken（成功时）",
                    "type": "string"
                }
            }
        },
        "device.RefreshTokenResponse": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string"
                },
                "success": {
                    "type": "boolean"
                },
                "token": {
                    "type": "string"
                }
            }
        },
        "device.UnbindDeviceRequest": {
            "type": "object",
            "required": [
                "bind_key",
                "device_id"
            ],
            "properties": {
                "bind_key": {
                    "type": "string"
                },
                "device_id": {
                    "type": "string"
                }
            }
        },
        "device.UnbindDeviceResponse": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string"
                },
                "success": {
                    "type": "boolean"
                }
            }
        },
        "models.CreateAIConfigRequest": {
            "type": "object",
            "required": [
                "config_name",
                "function_name"
            ],
            "properties": {
                "api_key": {
                    "type": "string"
                },
                "base_url": {
                    "type": "string"
                },
                "config_name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "function_name": {
                    "description": "不能为空，且长度必须大于0",
                    "type": "string",
                    "minLength": 1
                },
                "llm_type": {
                    "type": "string"
                },
                "max_tokens": {
                    "type": "integer"
                },
                "mcp_server_url": {
                    "type": "string"
                },
                "model_name": {
                    "type": "string"
                },
                "parameters": {
                    "type": "object",
                    "additionalProperties": true
                },
                "priority": {
                    "type": "integer"
                },
                "temperature": {
                    "type": "number"
                }
            }
        },
        "models.UpdateAIConfigRequest": {
            "type": "object",
            "properties": {
                "api_key": {
                    "type": "string"
                },
                "base_url": {
                    "type": "string"
                },
                "config_name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "function_name": {
                    "type": "string"
                },
                "is_active": {
                    "type": "boolean"
                },
                "llm_type": {
                    "type": "string"
                },
                "max_tokens": {
                    "type": "integer"
                },
                "mcp_server_url": {
                    "type": "string"
                },
                "model_name": {
                    "type": "string"
                },
                "parameters": {
                    "type": "object",
                    "additionalProperties": true
                },
                "priority": {
                    "type": "integer"
                },
                "temperature": {
                    "type": "number"
                }
            }
        },
        "ota.ErrorResponse": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string",
                    "example": "缺少 device-id"
                },
                "success": {
                    "type": "boolean",
                    "example": false
                }
            }
        },
        "ota.OtaFirmwareResponse": {
            "type": "object",
            "properties": {
                "firmware": {
                    "type": "object",
                    "properties": {
                        "url": {
                            "type": "string",
                            "example": "/ota_bin/1.0.3.bin"
                        },
                        "version": {
                            "type": "string",
                            "example": "1.0.3"
                        }
                    }
                },
                "server_time": {
                    "type": "object",
                    "properties": {
                        "timestamp": {
                            "type": "integer",
                            "example": 1688443200000
                        },
                        "timezone_offset": {
                            "type": "integer",
                            "example": 480
                        }
                    }
                },
                "websocket": {
                    "type": "object",
                    "properties": {
                        "url": {
                            "type": "string",
                            "example": "wss://example.com/ota"
                        }
                    }
                }
            }
        },
        "ota.OtaRequest": {
            "type": "object",
            "properties": {
                "application": {
                    "type": "object",
                    "properties": {
                        "version": {
                            "type": "string",
                            "example": "1.0.0"
                        }
                    }
                }
            }
        }
    }
}